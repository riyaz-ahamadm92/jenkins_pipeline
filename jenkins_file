pipeline {
	agent none
	
        stages {
		stage ('C and java projects') {
		  parallel {
		           stage ('C projects') {
			   agent { label 'slave_for_c' }
		                     steps {
				             sh '''#!/bin/bash
				             git pull https://github.com/riyaz-ahamadm92/C-projects.git
				             if [ $? -ne 0 ] ; then
				             git clone https://github.com/riyaz-ahamadm92/C-projects.git
					     fi
				             cd C projects
				             make clean ABC.exe
				             if [ $? -eq 0 ] ; then
				             echo " Build is success "
				             else
				             echo " Build is failed "
				             fi'''
				             }	
		                     }
		             stage ('java projects') {
			     agent { label 'slave_for_java' }
			                 steps {
				            sh '''#!/bin/bash
				            git pull https://github.com/riyaz-ahamadm92/java-projects.git
				            if [ $? -ne 0 ] ; then
				            git clone https://github.com/riyaz-ahamadm92/java-projects.git
				            fi
				            cd java-projects
				            mvn clean install
				            if [ $? -eq 0 ] ; then
				            echo " Build is success "
					    ssh *.war ec2-user@172.31.16.81:/home/ec2-user/opt/apache-tomcat-8.5.58/webapps
				            else
				            echo " Build is failed "
				            fi'''
				            }
				       }
			    stage ('STAGE 3') {
		            agent { label 'master' }
			                   steps {
		                           echo 'This is master with STAGE 3'
		                           sh 'sleep 10'
			                   }	
		                      }
				}
			}   
		
		stage ('STAGE 4') {
		agent { label 'slave_for_c' }
			steps {
				echo 'This is slave_for_c with STAGE 4'
				sh 'sleep 10'
			}	
		}
	}
}





